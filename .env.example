# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# OpenTelemetry Configuration
# Enable or disable telemetry (true/false)
ENABLE_TELEMETRY=true

# Service name for traces
OTEL_SERVICE_NAME=pdf-form-filler

# OTLP exporter endpoint (gRPC)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Sampler that always samples spans
OTEL_TRACES_SAMPLER=always_on

# Optional: Enable verbose debug output for PDF field operations
ESD_VERBOSE=false

# Optional: Use insecure mode (set to TRUE for LOCAL DEVELOPMENT ONLY)
OTEL_EXPORTER_OTLP_INSECURE=true